<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_piano"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <Button
            android:id="@+id/vw_bt_color_nota"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:enabled="false"
            android:background="#FFEBEE"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:layout_marginLeft="2dp"
            android:id="@+id/vw_bt_do"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:width="60dp"
            android:textColor="@android:color/white"
            android:background="@drawable/bk_boton_plano"

            android:text="@string/nota_do"
            android:textSize="30sp"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/vw_bt_re"
            android:layout_marginLeft="2dp"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:width="20dp"
            android:textColor="@android:color/white"
            android:background="@drawable/bk_boton_plano"

            android:text="@string/re"
            android:textSize="30dp"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/vw_bt_mi"
            android:layout_marginLeft="2dp"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:width="50dp"
            android:textColor="@android:color/white"
            android:background="@drawable/bk_boton_plano"

            android:text="MI"
            android:textSize="30dp"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/vw_bt_fa"
            android:layout_marginLeft="2dp"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:width="50dp"
            android:textColor="@android:color/white"
            android:background="@drawable/bk_boton_plano"
            android:stateListAnimator="@null"
            android:text="@string/fa"
            android:textSize="30sp"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/vw_bt_sol"
            android:layout_marginStart="2dp"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:width="50dp"
            android:textColor="@android:color/white"
            android:background="@drawable/bk_boton_plano"

            android:text="SOL"
            android:textSize="30dp"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/vw_bt_la"
            android:layout_marginLeft="2dp"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:width="50dp"
            android:textColor="@android:color/white"
            android:background="@drawable/bk_boton_plano"
            android:text="LA"
            android:textSize="30sp"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/vw_bt_si"
            android:layout_marginLeft="2dp"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:width="80dp"
            android:textColor="@android:color/white"
            android:background="@drawable/bk_boton_plano"
            android:text="SI"
            android:textSize="30sp"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/vw_bt_do2"
            android:layout_marginStart="2dp"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:width="80dp"
            android:textColor="@android:color/white"
            android:background="@drawable/bk_boton_plano"

            android:text="DO"
            android:textSize="30sp"
            style="@style/Widget.AppCompat.Button.Borderless"/>
    </LinearLayout>

</LinearLayout>