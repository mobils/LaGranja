<LinearLayout xmlns:android ="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/granja"
        android:textSize="40sp"
        android:textAllCaps="false"
        android:layout_marginVertical="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#C000C0"
            android:contentDescription="@string/descripcio"
            android:padding="3dp"
            android:src="@drawable/anec" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/gat"
            android:background="#C0C000"
            android:padding="3dp"
            android:contentDescription="@string/descripcio" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cavall"
            android:background="#00C0C0"
            android:padding="3dp"
            android:contentDescription="@string/descripcio" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/gos"
            android:background="#00C000"
            android:padding="3dp"
            android:contentDescription="@string/descripcio" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/porc"
            android:background="#0000C0"
            android:padding="3dp"
            android:contentDescription="@string/descripcio" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/vaca"
            android:background="#C00000"
            android:padding="3dp"
            android:contentDescription="@string/descripcio" />
    </LinearLayout>

    
    <LinearLayout android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:id="@+id/contenidor"
        android:orientation="horizontal" />

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/video"/>
</LinearLayout>
